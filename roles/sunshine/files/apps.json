{
    "apps": [
        {
            "auto-detach": true,
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "desktop.png",
            "name": "Desktop",
            "prep-cmd": [
                {
                    "do": "kscreen-doctor output.DisplayPort-3.enable output.DisplayPort-3.mode.1920x1080@60 output.DisplayPort-1.disable",
                    "undo": "kscreen-doctor output.DisplayPort-1.enable output.DisplayPort-1.mode.3440x1440@144 output.DisplayPort-3.disable"
                }
            ],
            "wait-all": true
        },
        {
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "image-path": "steam.png",
            "name": "Steam Big Picture",
            "prep-cmd": [
                {
                    "do": "",
                    "undo": "setsid steam steam://close/bigpicture"
                }
            ]
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}